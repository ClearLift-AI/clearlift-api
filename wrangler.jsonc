      "name": "clearlift-api-staging",
      "routes": [{ "pattern": "api-dev.clearlift.ai/*", "zone_name": "clearlift.ai" }],
      "vars": {
        "CLOUDFLARE_ACCOUNT_ID": "133c285e1182ce57a619c802eaf56fb0",
